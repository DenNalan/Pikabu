{
    "manifest_version": 2,
 
    "name": "Pikabu",
    "description": "Уведомления о новых комментариях и постах на сайте Пикабу.",
    "author": "Nalan",
    "short_name": "pikabu",
    "version": "1.3",
    "browser_action": {
        "default_popup": "popup.html"
    },

    "icons": {
        "16": "img/i16.png",
        "48": "img/i48.png",
        "128": "img/i128.png"
    },

    "background": {
        "scripts": ["js/background.js", "js/jQuery.js"]
    },

    "permissions": [ "tabs", "http://*/*", "https://*/*", "unlimitedStorage", "storage", "webRequest", "webRequestBlocking" ]
}